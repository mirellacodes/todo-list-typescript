{
  "version": 2,
  "builds": [
    {
      "src": "server.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/server.ts"
    },
    {
      "source": "/tasks/:path*",
      "destination": "/server.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/server.ts"
    }
  ]
}
